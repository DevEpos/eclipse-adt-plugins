<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension
         point="org.eclipse.ui.views">
      <view
            category="com.devepos.adt"
            class="com.devepos.adt.callhierarchy.ui.internal.views.CallHierarchyView"
            icon="icons/CallHierarchy.png"
            id="com.devepos.adt.callhierarchy.ui.views.CallHierarchy"
            name="%views.callHierarchy.name"
            restorable="true">
      </view>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            allPopups="false"
            locationURI="popup:#EditorContext?after=com.sap.adt.tools.abapsource.ui.showAbapTypeHierarchy">
         <command
               commandId="com.devepos.adt.callhierarchy.ui.commands.executeCallHierarchy"
               icon="icons/CallHierarchy.png"
               label="%menus.commands.executeCallHierarchy.label"
               style="push">
            <visibleWhen
                  checkEnabled="false">
               <with
                     variable="activeEditorInput">
                  <adapt
                        type="com.devepos.adt.base.ui.adtobject.IAdtObject">
                     <test
                           forcePluginActivation="true"
                           property="com.devepos.adt.callhierarchy.ui.isCallHierarchyAvailable">
                     </test>
                     <test
                           property="com.devepos.adt.callhierarchy.ui.isObjectRelevant">
                     </test>
                  </adapt>
               </with>
            </visibleWhen>
         </command>
      </menuContribution>
   </extension>
   <extension
         point="org.eclipse.core.expressions.propertyTesters">
      <propertyTester
            class="com.devepos.adt.callhierarchy.ui.internal.CallHierarchyPropertyTester"
            id="com.devepos.adt.callhierarchy.ui.CallHierarchyPropertyTester"
            namespace="com.devepos.adt.callhierarchy.ui"
            properties="isCallHierarchyAvailable, isObjectRelevant"
            type="com.devepos.adt.base.ui.adtobject.IAdtObject">
      </propertyTester>
   </extension>
   <extension
         point="org.eclipse.ui.handlers">
      <handler
            class="com.devepos.adt.callhierarchy.ui.internal.handler.ExecuteCallHierarchyHandler"
            commandId="com.devepos.adt.callhierarchy.ui.commands.executeCallHierarchy">
      </handler>
   </extension>
   <extension
         point="org.eclipse.ui.commands">
      <category
            id="com.devepos.adt.callhierarchy.ui.commands.category"
            name="%commands.category.name">
      </category>
      <command
            categoryId="com.devepos.adt.callhierarchy.ui.commands.category"
            id="com.devepos.adt.callhierarchy.ui.commands.executeCallHierarchy"
            name="%commands.executeCallHierarchy.name">
      </command>
   </extension>
   <extension
         point="org.eclipse.core.runtime.preferences">
      <initializer
            class="com.devepos.adt.callhierarchy.ui.internal.preferences.PreferenceInitializer">
      </initializer>
   </extension>
   <extension
         point="org.eclipse.ui.preferencePages">
      <page
            category="com.devepos.adt.preferences"
            class="com.devepos.adt.callhierarchy.ui.internal.preferences.CallHierarchyPreferencesPage"
            id="com.devepos.adt.callhierarchy.ui.preferences.CallHierarchyPreferencesPage"
            name="%preference.page.callhierarchy.name">
      </page>
   </extension>
</plugin>
